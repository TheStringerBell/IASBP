<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainActionBg</item>
        <item name="android:icon">@mipmap/ic_logo</item>
        <item name="android:logo">@mipmap/ic_logo</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:titleTextStyle">@style/NoTitle</item>
        <item name="android:subtitleTextStyle">@style/NoTitle</item>


    </style>
    <style name="Default" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/newFont</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:switchStyle">@style/newFont</item>
        <item name="android:fontFamily">@font/raleway</item>


    </style>
    <style name="newFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="newFont2" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/raleway</item>
    </style>


